<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>Log in</h2>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="form-inputs">
				<%= f.input :email, required: false, autofocus: true, input_html: {class: 'form-control'} %>
				<%= f.input :password, label: "Senha", required: false, input_html: {class: 'form-control'} %>
				<%= f.input :remember_me, label: "Relembrar senha", as: :boolean if devise_mapping.rememberable? %>
			</div>
			<br>
			<div class="form-actions">
				<%= f.button :submit, "Entrar", class: 'btn btn-primary' %>
			</div>
		<% end %>
		<br>
		<%= render "devise/shared/links" %>		
	</div>	
</div>
